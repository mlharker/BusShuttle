@{
    ViewData["Title"] = "Driver";
}

<div class="text-center">
    <h1 class="display-4">Manager Actions</h1>
</div>

<style>
    body{
        margin: 0;
        height: 100vh;
    }
    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
    }
    .button {
        width: 250px;
        height: 75px;
        margin: 15px;
        font-size: 18px;
        border: none;
        background-color: #010801;
        color: white;
        cursor: pointer;
        border-radius: 8px;
        align-content: center;
        text-align: center;
    }
    a:hover{
        color: green;
    }
</style>

<body>

    <div class="button-container">
        <a class="button" asp-area="" asp-controller="Home" asp-action="Bus">Busses</a>
        <a class="button" asp-area="" asp-controller="Home" asp-action="Routes">Routes</a>
        <a class="button" asp-area="" asp-controller="Home" asp-action="Stop">Stops</a>
        <a class="button" asp-area="" asp-controller="Home" asp-action="Loop">Loops</a>
        <a class="button" asp-area="" asp-controller="Home" asp-action="Entry">Entries</a>
    </div>

</body>