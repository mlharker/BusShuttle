@model IEnumerable<BusShuttleWeb.Models.EntryViewModel>
    @{
    ViewData["Title"] = "Entries";
    }

    <style>
        .dataTable {
            width: 100%;
            border-collapse: collapse;
        }

            .dataTable th, .dataTable td {
                padding: 8px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .dataTable th {
                background-color: #f2f2f2;
            }

            .dataTable tr:nth-child(even) {
                background-color: #f2f2f2;
            }
    </style>


    <table class="dataTable">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Time
                </th>
                <th>
                    Boarded
                </th>
                <th>
                    Left Behind
                </th>
                <th>
                    Loop
                </th>
                <th>
                    Bus
                </th>
                <th>
                    Stop
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.TimeStamp.ToString("MM/dd/yyyy")</td>
                <td>@entry.TimeStamp.ToString("HH:ss")</td>
                <td>@entry.Boarded</td>
                <td>@entry.LeftBehind</td>
                <td>@entry.LoopName</td>
                <td>@entry.BusName</td>
                <td>@entry.StopName</td>
            </tr>
        }
        </tbody>
    </table>
