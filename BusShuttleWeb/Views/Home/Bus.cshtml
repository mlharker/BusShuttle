@model IEnumerable<BusShuttleWeb.Models.BusViewModel>
    @{
    ViewData["Title"] = "Bus";
    }
    <style>
        .button-container {
            display: flex;
            margin-top: 100px;
        }

        .button {
            width: 150px;
            height: 50px;
            margin: 25px;
            font-size: 18px;
            border: none;
            background-color: #010801;
            color: white;
            cursor: pointer;
            border-radius: 8px;
            align-content: center;
            text-align: center;
        }
        a{
            color: green;
        }
        a:hover{
            color: green;
        }
    </style>

    <div class="text-center">
        <h1 class="display-4">Busses</h1>
    </div>

    <div class="button-container">
        <a asp-action="BusCreate" class="button">Create new bus</a>
    </div>


    <table class="dataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BusName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusName)
                </td>
                <td>
                    <a asp-action="BusEdit" asp-route-id="@item.Id">Edit</a>
                    <form method="post" action='@Url.Action("DeleteBus", "Home")'>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button style="background-color:red;color:white;" type="submit">Delete Bus</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
